{% extends "base.njk" %} {% block content %}
<section class="site-hero">
  <div class="container cloud-migration-hero">
    <div class="site-hero-content center">
      <img src="{{hero.icon}}" width="60px" />
      <h6 class="heroServiceName">{{hero.name}}</h6>
      <h1 class="heroTitle">{{hero.title | safe}}</h1>
      <h6 class="heroSubTitle center light-font">{{hero.subTitle | safe}}</h6>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="grid-item">
      <h3 class="secondary-color">{{title | safe}}</h3>
      <h3>{{subTitle | safe}}</h3>
      <h3>{{intro}}</h3>
    </div>
    <div class="grid services-grid">
      {% for challenge in challenges %}
      <div class="challenge card">
        <img src="{{challenge.icon}}" class="icon icon-lg" />
        <h6>{{challenge.name}}</h6>
        <p>{{challenge.description}}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="title-section center">
      <h3>{{approach.title}}</h3>
    </div>
    <div class="grid services-grid">
      {% for step in approach.steps%}
      <div class="grid-item card">
        <img src="{{step.icon}}" class="icon icon-lg" />
        <h6>{{step.name}}</h6>
        <p class="">{{step.description}}</p>
      </div>
      {%endfor%}
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="section-title">
      <h3 class="center">{{AWS.title}}</h3>
      <p>{{AWS.intro}}</p>
    </div>
    <div>
      {% for benefit in AWS.benefits %}
      <div
        class="grid benefit {% if loop.index % 2 == 0 %} reverse {% endif %}"
      >
        <div class="text">
          <h5>{{benefit.name}}</h5>
          <p>{{benefit.description}}</p>
        </div>
        <div>
          {% if benefit.name == 'Vendor-Agnostic, Future-Proof Solutions' %} {%
          set className = 'illustration round' %} {% else %} {% set className =
          'illustration' %} {% endif %}
          <img src="{{ benefit.image }}" class="{{ className }}" />
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
