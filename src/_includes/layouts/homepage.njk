{% extends "base.njk" %} {% block content %}

<section class="site-hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="site-hero-content">
          <h1>{{hero.title | safe}}</h1>
          <h4>{{hero.subTitle}}</h4>
          <a
            href="/{{hero.connectBtn.link}}"
            class="btn btn-primary btn-sm-rounded"
          >
            <span class="btn-area">
              <span data-text="{{hero.connectBtn.text}}"
                >{{hero.connectBtn.text}}</span
              >
            </span>
          </a>
        </div>
      </div>
      <div class="col-lg-6">
        <img
          src="./assets/images/backgrounds/man-managing-files-and-data-on-cloud-web-server-md.png"
          alt="hero image"
        />
      </div>
    </div>
  </div>

  <a href="#counter" class="site-hero-scroll scroll-to">
    <img src="/assets/images/arrow-down.svg" alt="arrow-down" />
  </a>
</section>

