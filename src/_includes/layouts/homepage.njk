<section class="site-project" id="project">
  <div class="container">
    <div class="row">
      <div class="col-12 center">
        <div class="section-title uppercase">
          <h2>{{challenge.title | safe}}</h2>
        </div>
      </div>
      <div class="col-md-6 challenge-col">
        {% for challenge in challenges.challenges_A %}
        <div class="challenge-card">
          <img src="{{challenge.icon}}" />
          <div class="challenge-content">
            <h6>{{challenge.title}}</h6>
            <p>{{challenge.des}}</p>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="col-md-6 challenge-col">
        {% for challenge in challenges.challenges_B %}
        <div class="challenge-card">
          <img src="{{challenge.icon}}" />
          <div class="challenge-content">
            <h6>{{challenge.title}}</h6>
            <p>{{challenge.des}}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<section class="site-project" id="project">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h3>{{mission.title | safe}}</h3>
          <h3>{{mission.main}}</h3>
          <a
            href="/{{hero.connectBtn.link}}"
            class="btn btn-primary btn-sm-rounded"
          >
            <span class="btn-area">
              <span data-text="{{hero.connectBtn.text}}"
                >{{hero.connectBtn.text}}</span
              >
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

