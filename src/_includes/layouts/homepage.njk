<section class="site-project" id="project">
  <div class="container">
    <div class="row">
      <div class="col-12 center">
        <div class="section-title">
          <h2>{{challenge.title | safe}}</h2>
        </div>
      </div>

      <div class="col-md-6 challenge-col">
        {% for challenge in challenges.challenges_A %}
        <div class="challenge-container">
          <img src="{{challenge.icon}}" />
          <div class="challenge-content">
            <h6>{{challenge.title}}</h6>
            <p>{{challenge.des}}</p>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="col-md-6 challenge-col">
        {% for challenge in challenges.challenges_B %}
        <div class="challenge-container">
          <img src="{{challenge.icon}}" />
          <div class="challenge-content">
            <h6>{{challenge.title}}</h6>
            <p>{{challenge.des}}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<section class="site-testimonial">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{testimonials.title}}</h2>
          <p>{{testimonials.des}}</p>
        </div>
      </div>
      {% for opinion in testimonials.opinion %}
      <div class="col-lg-4 col-md-6">
        <div class="site-testimonial-item">
          <div class="site-testimonial-item-header">
            <div class="thumb">
              <img src="{{opinion.img}}" alt="user-thumb" />
            </div>
            <div class="person">
              <h5>{{opinion.name}}</h5>
              <p>{{opinion.dig}}</p>
            </div>
          </div>
          <p class="site-testimonial-item-body">{{opinion.comment}}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
