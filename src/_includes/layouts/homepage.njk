{% extends "base.njk" %} {% block content %}

<section class="siteHero">
  <div class="container">
    <div class="siteHeroContent">
      <h1 class="heroTitle">{{hero.title | safe}}</h1>
      <h6 class="heroSubTitle">{{hero.subTitle}}</h6>
    </div>
    <div class="heroButtons">
      {% for button in hero.buttons%}
      <a href="/{{button.link}}" class="btn btn-secondary">
        <span class="btn-area">
          <span data-text="{{button.text}}">{{button.text}}</span>
        </span>
      </a>
      {%endfor%}
    </div>
  </div>
</section>

<section class="section light-bg" id="project">
  <div class="container">
    <div class="section-title mb-lg center">
      <h2 class="uppercase mb-lg">{{yourChallenges.title | safe}}</h2>
      <p>{{yourChallenges.subTitle | safe}}</p>
    </div>
    <div class="challengesGridContainer">
      {% for challenge in yourChallenges.challenges %}
      <div class="challengesGridItem">
        <img src="{{challenge.icon}}" class="challengesGridItemIcon" />
        <div class="challengeContent">
          <h6 class="challengesGridItemTitle">{{challenge.title}}</h6>
          <p class="challengesGridItemDescription">{{challenge.des}}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="section" id="project">
  <div class="container center">
    <h3 class="missionTitle">{{mission.title | safe}}</h3>
    <h3 class="missionMain">{{mission.main | safe}}</h3>
    <!-- Google Calendar Appointment Scheduling begin -->
    <script
      src="https://calendar.google.com/calendar/scheduling-button-script.js"
      async
    ></script>
    <script defer>
      ;(function () {
        var target = document.currentScript
        window.addEventListener("load", function () {
          calendar.schedulingButton.load({
            url: "https://calendar.google.com/calendar/appointments/schedules/AcZssZ0vjsn2s4bFmi008CdMUzP-OVemccm239MljgA84LubSCTzS5SNDQMzZNt45JM3Gwzv5yyXOYCU?gv=true",
            color: "#EB3678",
            label: "Book a call",
            target,
          })
        })
      })()
    </script>
    <!-- end Google Calendar Appointment Scheduling -->
  </div>
</section>
<section class="section" id="project">
    <h2 class="solutionsTitle center">Solutions</h2>
    <div class="solutionsContainer">
      {% for solution in ourSolutions.solutions %}
      <div class="grid-item solutionItem">
        <div class="solutionsContent">
          <img
            src="{{solution.image}}"
            class="solutionsContentImage"
            altText="{{solution.altText}}"
          />
          <p class="solutionsContentTitle"><b>{{solution.title}}</b></p>
          <h6 class="solutionsContentSubtitle">{{solution.subtitle}}</h6>
          <p class="solutionsContentDescription">{{solution.description}}</p>
          <a href="/{{hero.managedCloud.link}}">
            <span class="btn-area">
              <span data-text="Explore {{solution.title}}"
                ><b>Explore {{solution.title}}</b
                ><img
                  src="/assets/images/right-arrow.svg"
                  class="learnMoreIcon"
              /></span>
            </span>
          </a>
        </div>
      </div>
      {% endfor %}
    </div>
</section>
{% endblock %}
