          </script>
          <!-- end Google Calendar Appointment Scheduling -->
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section solutions" id="project">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{ourSolutions.title}}</h2>
          <h6>{{ourSolutions.subTitle | safe}}</h6>
        </div>
        <div class="col-12 solution-col">
          {% for solution in solutions.solutions %}
          <div class="col-6">
            <div class="solution-item">
              <div class="solutions-content">
                <img src="{{solution.icon}}" />
                <h5>{{solution.title}}</h5>
                <p>{{solution.description }}</p>
              </div>
            </div>
          </div>
          {% endfor %} {% for solution in solutions.solutions %}
          <div class="col-6">
            <div class="solution-card">
              <div class="solutions-content">
                <img src="{{solution.icon}}" />
                <h5>{{solution.title}}</h5>
                <p>{{solution.description}}</p>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
