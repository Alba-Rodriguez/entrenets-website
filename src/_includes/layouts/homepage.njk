{% extends "base.njk" %} {% block content %}

<section class="site-hero">
  <div class="container">
    <div class="row">
      <div class="col-12 site-hero-content">
        <h1>{{hero.title | safe}}</h1>
        <h6>{{hero.subTitle}}</h6>
      </div>
      <div class="site-hero-btn">
        <a
          href="/{{hero.cloudMigrationBtn.link}}"
          class="btn btn-secondary btn-sm-rounded"
        >
          <span class="btn-area">
            <span data-text="{{hero.cloudMigrationBtn.text}}"
              >{{hero.cloudMigrationBtn.text}}</span
            >
          </span>
        </a>
        <a
          href="/{{hero.automationBtn.link}}"
          class="btn btn-secondary btn-sm-rounded"
        >
          <span class="btn-area">
            <span data-text="{{hero.automationBtn.text}}"
              >{{hero.automationBtn.text}}</span
            >
          </span>
        </a>
        <a
          href="/{{hero.managedCloud.link}}"
          class="btn btn-secondary btn-sm-rounded"
        >
          <span class="btn-area">
            <span data-text="{{hero.managedCloud.text}}"
              >{{hero.managedCloud.text}}</span
            >
          </span>
        </a>
      </div>
    </div>
  </div>

  <a href="#counter" class="site-hero-scroll scroll-to">
    {# <img src="/assets/images/arrow-down.svg" alt="arrow-down" /> #}
  </a>
</section>

